= form_for @town do |f|
  - if @town.errors.any?
    #error_explanation
      %h2= "#{pluralize(@town.errors.count, "error")} prohibited this town from being saved:"
      %ul
        - @town.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :long
    = f.text_field :long
  .actions
    = f.submit 'Save'
